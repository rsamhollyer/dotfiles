#!/usr/bin/env bash

# Created By: Jake@Linux
# Created On: Sat 03 Sep 2022 03:56:04 PM CDT
# Project: bspwm scratchpad

# This is a BSPWM specific scratchpad for a terminal

winclass=$(xdotool search --class bspwm_scpad_term)

if [ -z "$winclass" ]; then
    alacritty --class bspwm_scpad_term,bspwm_scpad_term -t bspwm_scpad_term
else
    if [ ! -f /tmp/bspwm_scpad_term ]; then
        touch /tmp/bspwm_scpad_term && xdo hide "$winclass"
    elif [ -f /tmp/bspwm_scpad_term ]; then
        rm /tmp/bspwm_scpad_term && xdo show "$winclass"
    fi
fi
