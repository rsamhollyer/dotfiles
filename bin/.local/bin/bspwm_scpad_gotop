#!/usr/bin/env bash

# Created By: Jake@Linux
# Created On: Sat 03 Sep 2022 03:56:04 PM CDT
# Project: bspwm scratchpad

# This is a BSPWM specific scratchpad for Gotop

winclass=$(xdotool search --class bspwm_scpad_gotop)

if [ -z "$winclass" ]; then
    alacritty --class bspwm_scpad_gotop,bspwm_scpad_gotop -t bspwm_scpad_gotop -e gotop &
else
    if [ ! -f /tmp/bspwm_scpad_gotop ]; then
        touch /tmp/bspwm_scpad_gotop && xdo hide "$winclass"
    elif [ -f /tmp/bspwm_scpad_gotop ]; then
        rm /tmp/bspwm_scpad_gotop && xdo show "$winclass"
    fi
fi
