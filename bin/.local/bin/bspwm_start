#! /bin/env bash

# Launch Apps

function run {
    if ! pgrep -f "$1"; then
        "$@" &
    fi
}

run /usr/bin/dunst
run /usr/bin/xfce4-power-manager
run /usr/bin/xmousepasteblock
run /usr/bin/numlockx
run /usr/bin/polkit-dumb-agent
run /usr/bin/mons -a -x ~/.config/screenlayout/mons-plug.sh
run sxhkd
run redshift -P -c ~/.config/redshift.conf
run picom
run /usr/bin/pipewire
run /usr/bin/pipewire-pulse
run /usr/bin/wireplumber
run clipmenud
