[global]
    ### Display ###

    monitor = 0
    follow = mouse
    indicate_hidden = yes
    shrink = no
    transparency = 0
    separator_height = 3
    padding = 12
    horizontal_padding = 12
    width = (0,2600)
    frame_color = "#b06c4b"
    separator_color = auto
    sort = yes
    idle_threshold = 0

    ### Text ###
    font = CaskaydiaCove Nerd Font 15
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = right
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 0
    max_icon_size = 64
    icon_path = $HOME/.local/share/icons/flattrcolor/status/22:$HOME/.local/share/icons/flattrcolor/devices/64:$HOME/.local/share/icons/flattrcolor/apps/scalable:$HOME/.local/share/icons/flattrcolor/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = "/usr/bin/rofi -dmenu -p dunst:"
    browser = "xdg-open"
    always_run_script = true
    title = Dunst
    class = Dunst
    force_xinerama = false

