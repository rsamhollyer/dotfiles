# RELOAD SXHKD
{super,hyper} + q
    pkill -x sxhkd && sxhkd &

# CLOSE AND KILL
hyper + {_,shift + }w
    bspc node -{c,k}

# RESTART AND QUIT
hyper + {_,shift + }e
    bspc {wm -r,quit};

# BROWSER
{super,hyper} + a
	$BROWSER --flag-switches-begin --debug-packed-apps --silent-debugger-extension-api --flag-switches-end;

# FILE MANAGER
{super,hyper} + f
	$FILE_MANAGER;

hyper + r
    ~/.local/bin/bspwm_scpad_ranger &

# VS CODE
{super,hyper} + s
    ~/.local/programs/VSCode-linux-x64/bin/code-insiders &

# PAVUCONTROL
{hyper,super} + p
    pavucontrol;

# STEAM
hyper + super + s
    /usr/bin/steam-runtime &

# SLACK
super + z
    slack;

# NVIM
hyper + d
    ~/.local/bin/bspwm_scpad_nvim &

# TERMINAL
{super,hyper} + apostrophe
    alacritty;

# CALCULATOR
super + c
    qalculate-gtk;

# SCRATCH PADS
## Terminal
hyper + {Return,KP_Enter}
      ~/.local/bin/scratchpad_term &

## BTOP
hyper + semicolon
    ~/.local/bin/bspwm_scpad_gotop &

# LEFT MONITOR
super + {_,shift + }{1-5}
    bspc {desktop -f,node -d} {1-5} --follow;

# RIGHT MONITOR
hyper + {_,shift + }{1-5}
    bspc {desktop -f,node -d} {6-9,10} --follow;

# MOVE TO NEXT DESKTOP
hyper + {Left,Right}
    bspc node -d {prev,next}.local --follow;

# MANULLY TILE
ctrl + hyper + {a,s,z,w}
    bspc node -p {west,east,south,north}

# WINDOW MANAGEMENT
hyper + {z,x,c,v}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen};

# alternate between the tiled and monocle layout
{hyper,super} + m
    bspc desktop -l next;

# focus the next/previous window in the current desktop
super + alt + {_,shift + }c
    bspc node -f {next,prev}.local.!hidden.window;

# focus the next/previous desktop in the current monitor
hyper + bracket{left,right}
    bspc desktop -f {prev,next}.local;

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last;

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private};

# MOVE AND RESIZE
# Resize a Node Window
# - Horizontal Shrink, Vertical Grow, Vertical Shrink, Horizontal Grow
hyper + {h,j,k,l}
    {bspc node -z right -20 0;bspc node -z left +20 0, \
    bspc node -z top 0 -20; \
    bspc node -z bottom 0 +20, \
    bspc node -z top 0 +20; \
    bspc node -z bottom 0 -20, \
    bspc node -z right +20 0; \
    bspc node -z left -20 0}    

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0};

# VOLUME
# Change volume
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}2%;

# Change volume
super + {k,j}
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}2%;

# Change volume, chunky
super + shift + {k,j}
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%;

# MUTE - NextTime 75 keyboard's knob is mapped to XF86AudioPlay
{XF86AudioMute,XF86AudioPlay} 
    pactl set-sink-mute 0 toggle

# MUSIC & CAVA
hyper + shift + {Return,KP_Enter}
    alacritty --class cava,cava -t cava -e cava & \
    alacritty --class ncmcpp,ncmcpp -t ncmpcpp -e ncmpcpp & \
    alacritty --class pipes,pipes -t pipes -e pipes.sh

# MANULLY TILE
ctrl + hyper + {a,s,z,w}
    bspc node -p {west,east,south,north}

# Show help
hyper + slash
    ~/.local/bin/sxhkd-help

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# ROFI
## Menu
{super,hyper} + space
    $HOME/.config/rofi/scripts/launcher_t3;

## Power Menu
hyper + grave
    $HOME/.config/rofi/scripts/powermenu_t1;

## Wallpaper Picker
hyper + F1
    sh ~/.local/bin/change_walls.sh;

## Wifi Menu
hyper + F2
    sh /home/sam/.local/bin/wifimenu;

# Alacritty Color Picker
hyper + F3
    sh ~/.local/bin/alacritty_color.sh